<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/item_group_payment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/item_group_payment_cost"
            tools:text="Jan Hindges"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_group_payment_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="12,00 â‚¬"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_group_payment_user_name"
            android:textSize="12sp"
            tools:text="12.12.2020"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
